<h1 class="text-center my-4"><%= @blog.title %></h1>



<div class="container d-flex justify-content-center bg-light p-5 mb-2">
<p><%= @blog.content %></p>
</div>
<h6 class="text-center mb-5">Category: <%= @blog.category.category %></h6>

<div class="container-lg d-flex justify-content-between my-5">
<div>
<%= render 'comments/form' %>
</div>
<div>
<%= link_to "Edit", edit_blog_path(@blog.id) %>
<%= link_to "Delete", blog_path(@blog.id), method: :delete %>
<%= link_to "Back", blogs_path %>
</div>
</div>
<div class="d-flex flex-column justify-content-center text-center" >
<h6> Comments </h6>
<%= render 'comments/comment' %>
</div>