
<div class="container">
<div class="row">
    <% @blogs.each do |blog| %>
    <div class="col-md-4">
        <div class="card mt-3">
            <div class="card-header">
                <h3><%= link_to blog.title, blog_path(blog.id) %></h3>
            </div>
            <div class="card-body">
                <%= link_to "View", blog_path(blog.id), class: 'btn btn-primary' %>
            </div>
        </div>
    </div>
    <% end %>

    </div>
</div>






