<% @comments.each do |x| %>

<div class="container col-5">
    <div class="row justify-content-md-center bg-light py-4 my-2">
      <div class="col col-10">
<%= x.comment %>
</div>
<div class="col col-2">
<%= link_to "Delete", blog_comment_path(x.blog_id, x.id), class:"btn btn-danger", method: :delete %>
</div>
</div>
</div>
<% end %>